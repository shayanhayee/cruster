{
  // Directory containing spec files
  "specsDir": "specs",

  // OpenCode model to use
  "model": "anthropic/claude-opus-4-5",

  // OpenCode variant (low, medium, high)
  "variant": "high",

  // Prefix for git commit messages
  "commitPrefix": "feat(auto)",

  // CI checks to run before committing (required to pass)
  "checks": [
    {"name": "Cargo Check", "command": "cargo check --all-targets"},
    {"name": "Clippy", "command": "cargo clippy --all-targets --all-features -- -D warnings"},
    {"name": "Documentation", "command": "cargo doc --no-deps"},
    {"name": "Tests", "command": "cargo test"}
  ],

  // Additional useful commands (shown in reference, not required to pass)
  "commands": [
    {"name": "Build (debug)", "command": "cargo build"},
    {"name": "Build (release)", "command": "cargo build --release"},
    {"name": "Test specific crate", "command": "cargo test -p cruster --lib"},
    {"name": "Format code", "command": "cargo fmt"},
    {"name": "Check formatting", "command": "cargo fmt --check"}
  ]
}
